<div class="flex border-2 border-black p-4">
    <!-- Image on the left -->
    <div class="w-1/2 pr-4">
        <img src="/images/hero_sections/success_hero.jpg" alt="Image" class="w-full h-auto rounded-md">
    </div>

    <!-- Sign-up form on the right -->
    <div class="w-1/2 bg-white text-black p-6   ">
        <h2 class="text-2xl font-semibold mb-4 text-center">SIGN UP</h2>
        <form action="#" method="POST" class="border-2 px-6 py-10 rounded-3xl ml-30 mr-30">
            <!-- First Name -->
            <div class="mb-4">
                <label for="first-name" class="block text-sm font-medium py-2">First Name</label>
                <input type="text" id="first-name" name="first-name" required class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Last Name -->
            <div class="mb-4">
                <label for="last-name" class="block text-sm font-medium py-2">Last Name</label>
                <input type="text" id="last-name" name="last-name" required class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium py-2">Email</label>
                <input type="email" id="email" name="email" required class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="password" class="block text-sm font-medium py-2">Password</label>
                <input type="password" id="password" name="password" required class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Sign up button -->
            <button type="submit" class="w-full py-2 bg-orange-500 text-white rounded-md font-semibold hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-400">Sign Up</button>
            
            <!-- Already have an account -->
            <p class="mt-4 text-center text-LG font-bold">
                Already have an account? <a href="#" class="text-orange-500 hover:underline">Log In</a>
            </p>
        </form>

        
    </div>
</div>
