<div class="max-w-2xl mx-auto bg-gray-900 text-white p-8 rounded-lg shadow-lg mt-8 mb:8 py:10">
    <!-- Notice -->
    <p class="text-sm text-gray-400 mb-4">
        Please note we accept <span class="font-bold">Group Bookings ONLY during Non-Peak hours</span>
    </p>
    <p class="text-sm text-gray-400 mb-6">
        Please fill out the form below to contact us for your next group booking request at our location. <br>
        Required fields are marked with <span class="text-red-500">*</span>.
    </p>

    <!-- Form -->
    <form>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- First Name -->
            <div>
                <label class="block text-sm font-medium">First Name <span class="text-red-500">*</span></label>
                <input type="text" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>
            
            <!-- Last Name -->
            <div>
                <label class="block text-sm font-medium">Last Name <span class="text-red-500">*</span></label>
                <input type="text" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>
            
            <!-- Email -->
            <div>
                <label class="block text-sm font-medium">Email <span class="text-red-500">*</span></label>
                <input type="email" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Phone -->
            <div>
                <label class="block text-sm font-medium">Phone <span class="text-red-500">*</span></label>
                <input type="tel" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Nature of Event -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium">Nature of Event <span class="text-red-500">*</span></label>
                <select required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
                    <option value="" disabled selected>Select an option</option>
                    <option value="charity">Charity</option>
                    <option value="religious">Religious</option>
                    <option value="work_event">Work Event</option>
                    <option value="fundraiser">Fundraiser</option>
                </select>
            </div>

            <!-- Event Date -->
            <div>
                <label class="block text-sm font-medium">Event Date <span class="text-red-500">*</span></label>
                <input type="date" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Event Time -->
            <div>
                <label class="block text-sm font-medium">Event Time <span class="text-red-500">*</span></label>
                <input type="time" required class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Number of Guests -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium">Number of Guests <span class="text-red-500">*</span></label>
                <input type="number" required min="1" class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400">
            </div>

            <!-- Menu Options -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium">Menu Options <span class="text-red-500">*</span></label>
                <div class="flex items-center space-x-4 mt-1">
                    <label class="flex items-center space-x-2">
                        <input type="radio" name="menu" value="47" required class="form-radio text-orange-400">
                        <span>Menu-1 ($47)</span>
                    </label>
                    <label class="flex items-center space-x-2">
                        <input type="radio" name="menu" value="50" class="form-radio text-orange-400">
                        <span>Menu-2 ($50)</span>
                    </label>
                    <label class="flex items-center space-x-2">
                        <input type="radio" name="menu" value="79" class="form-radio text-orange-400">
                        <span>Menu-3 ($79)</span>
                    </label>
                </div>
            </div>

            <!-- Special Requests -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium">Special Requests</label>
                <textarea rows="4" class="w-full mt-1 p-2 bg-gray-800 border border-gray-700 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-orange-400"></textarea>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-6 text-center">
            <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white py-2 px-6 rounded-md text-lg font-semibold shadow-lg transition duration-200">
                Submit Booking Request
            </button>
        </div>
    </form>
</div>

