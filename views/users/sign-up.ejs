<div class="relative isolate px-6  lg:px-8 bg-cover bg-center md:bg-cover"  style="background-image: url(/images/hero_sections/success_hero.jpg); ">
    <!-- Image on the left -->
  

    <!-- Sign-up form on the right -->
    <div class="w-full md:w-1/2 text-black p-6   ">
        <h2 class="sm:block md:hidden text-5xl font-bold md:text-2xl md:font-semibold mb-10 text-center mt-10 text-orange-400  ">SIGN UP</h2>
        <form action="/users/sign-up" method="post" class="border-2 px-6 py-10 rounded-3xl md:ml-30 md:mr-30 bg-white mb-10 mt-10">

            <!-- ERRORS THAT WE STORED IN ERRORS ARRAY-->
            <div class="mt-2 mb-2">
                <% if (typeof errors !== "undefined" && errors.length > 0) { %>
                    <% errors.forEach(err => { %>
                        <p style="color:red;"><%= err %></p>
                    <% }) %>
                <% } %>
            </div>
                
            <!-- First Name -->
            <div class="mb-4">
                <label for="firstName" class="block text-sm font-medium py-2">First Name</label>
                <input type="text" id="firstName" name="firstName" required  value="<%= values.firstName%>" class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
                <% if (validationMessages.firstName) {%>
                    <span class=" text-red-600"><%=validationMessages.firstName %></span>
                <% } %>
            </div>

            <!-- Last Name -->
            <div class="mb-4">
                <label for="lastName" class="block text-sm font-medium py-2">Last Name</label>
                <input type="text" id="lastName" name="lastName" required  value="<%= values.lastName%>" class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
                <% if (validationMessages.lastName) {%>
                    <span class=" text-red-600"><%=validationMessages.lastName %></span>  
                <% } %>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium py-2">Email</label>
                <input type="email" id="email" name="email" required value="<%= values.email%>" class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
                <% if (validationMessages.email) {%>
                    <span class=" text-red-600"><%=validationMessages.email %></span>  
                  <% } %>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="passWord" class="block text-sm font-medium py-2">Password</label>
                <input type="passWord" id="passWord" name="passWord" required value="<%= values.passWord%>"" class="w-full p-2 bg-gray-100 border border-gray-300 rounded-md text-black focus:outline-none focus:ring-2 focus:ring-orange-400">
                <% if (validationMessages.passWord) {%>
                    <span class=" text-red-600"><%=validationMessages.passWord %></span>  
                <% } %>
            </div>

            <!-- Sign up button -->
            <button type="submit" class="w-full py-2 bg-orange-500 text-white rounded-md font-semibold hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-400">Sign Up</button>
            
            <!-- Already have an account -->
            <p class="mt-4 text-center text-LG font-bold">
                Already have an account? <a href="/users/log-in/" class="text-orange-500 hover:underline">Log In</a>
            </p>
        </form>
        
        
    </div>
    
    <div class="hidden md:flex absolute top-0 right-0 bottom-0 w-1/2 bg-black/50 z-0 items-center justify-center">
        <h2 class="text-white text-7xl font-bold text-center">SIGN UP</h2>
    </div>
</div>
